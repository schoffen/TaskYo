<resources>
    <!-- Base application theme. -->
    <style name="Theme.TaskYo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darker_gray</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/darker_gray</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="dark_blue_background">
        <item name="android:background">@color/blue_600</item>
    </style>

    <style name="task_item_background">
        <item name="android:backgroundTint">@color/darker_gray</item>
    </style>

    <style name="list_item_background">
        <item name="android:backgroundTint">@color/darker_gray</item>
    </style>

</resources>